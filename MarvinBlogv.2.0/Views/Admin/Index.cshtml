                                <div class="card-body">
                                    <div class="card"></div>
                                    <img width="200" height="150" src="@WC.ImagePath@post.ImageURL" />
                                </div>

                                <div>
                                    <h3>
                                        @post.Title
                                    </h3>
                                </div>

                                <div>
                                    @post.Content
                                </div>

                                @post.CreatedAt
                            </div>
                        </div>
                    </div>
                    <a class="text-secondary" asp-controller="Post" asp-action="IsApproved" asp-route-id="@post.Id"> Approve</a>
                }
            }*@
        }

        else
        {
            <p> No Category exists.</p>
        }
    </div>
</div>
