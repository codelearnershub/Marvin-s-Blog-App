@model IEnumerable<MarvinBlogv._2._0.Models.Post>

@{
    Layout = "_AdminDashboardLayout";
}

<h3>Welome @ViewBag.email</h3>

<div class="container">
    <div class="row">
        @if (Model.Count() > 0)
        {
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Title</th>
                                @*<th>Content</th>*@
                                <th>Description</th>
                                <th>Featured Image</th>
                                <th>Created At</th>
                                <th>Created By</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var post in Model)
                            {
                            <tr>
                                <td> @post.Title </td>
                                @*<td>@post.Content</td>*@
                                <td>@post.Description </td>
                                <td><img src="@WC.PostImagePath@post.FeaturedImageURL" /> </td>
                                <td>@post.CreatedAt </td>
                                <td>@ViewBag.email </td>
                                <td>
                                    <a class="btn btn-success" asp-controller="Post" asp-action="Update" asp-route-id="@post.Id">Update</a>
                                    <a class="btn btn-danger" asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id">Delete</a>
                                    <a class="btn btn-success" asp-controller="Post" asp-action="IsApproved" asp-route-id="@post.Id"><i class="fas fa-check-circle"></i></a>
                                    @*<a class="btn btn-danger" asp-action="Detail" asp-route-id="@review.Id">Details</a>*@
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            @*@foreach (var post in Model)
                {
                    <div class="col-4 mb-4 col-lg-4 justify-content-center">
                        <div class="card">
                            <div class="card-header text-center ">
