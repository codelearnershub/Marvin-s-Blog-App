@model MarvinBlogv._2._0.Models.ViewModel.CreateReviewViewModel

@{
    Layout = "BloggerDashboard";
}

<form method="post">
    <div>
        <textarea id="summernote" asp-for="Comment" name="comment" class="form-control text-danger"></textarea>
        <span class="text-danger" asp-validation-for="Comment"></span>
    </div>

   
<div class="form-group row justify-content-center">
    <div class="col">

        <input type="submit" asp-action="AddComment" class="btn btn-primary" value="Submit">

    </div>
</div>
</form>