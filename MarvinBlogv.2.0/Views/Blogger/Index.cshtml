@model IEnumerable<MarvinBlogv._2._0.Models.Post>

@{
    Layout = "BloggerDashboard";
}<h3>Welome @ViewBag.email</h3>


@if (Model.Count() > 0)
{
    @foreach (var post in Model)
    {
        <b>@post.Title</b>
        <br>
        <div class="container">
            <div class="col md-4">
                <div id="target">
                    <textarea @post.Content></textarea>
                </div>
            </div>
        </div>

        <br />
        @post.Description
        <br />

        <img src="@WC.PostImagePath@post.FeaturedImageURL" />

        @post.CreatedAt
        <br />
        @ViewBag.createdBy

        @if (post.Status == false && post.CreatedBy == ViewBag.createdBy)
        {
            <a class="btn btn-success" asp-controller="Post" asp-action="Update" asp-route-id="@post.Id"><i class="fas fa-edit" aria-hidden="true"></i></a>
        }
    }
}

else
{
    <p> No Post exists.</p>
}

<script>
    (function () {
        $(document).ready(function () {
            $("#target").html($(this).val());
        });
</script>
<script src="~/js/Jquery2.2.1/Jquery2.1.1.js"></script>