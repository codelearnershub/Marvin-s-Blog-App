@model List<MarvinBlogv._2._0.Models.ViewModel.ListPostVM>

@{
    Layout = "BloggerDashboard";
}<h3>Welome @ViewBag.email</h3>


@if (Model.Count() > 0)
{
    @foreach (var post in Model)
    {
        @if (post.Status == true)
        {
            <b>@post.PostTitle</b>
            <br>
            <div class="container">
                <div class="col md-4">
                    <div class="card">
                        <div class="card-body">
                            <div class="target">@Html.Raw(@post.Content)</div>
                        </div>
                    </div>
                </div>
            </div>

            <br />
            @post.Description
            <br />

            <img src="@WC.PostImagePath@post.ImageUrl" />

            @post.CreatedAt
            <br />
            @post.CreatedBy

            <div>
                @foreach (var category in post.PostCategories)
                {
                    <a asp-controller="Post" asp-action="GetPostByCategoryId" asp-route-Id="@category.Id" class="font-weight-bold btn" style="color:white; background-color:dimgrey; border-radius:10%; display:inline">@category.Name</a>
                }

            </div><br />
                   @post.PostReviews <a asp-controller="Review" asp-action="GetReviewByPostId" asp-route-Id="@post.Id"><i class="fa fa-thumbs-up" aria-hidden="true"></i></a>
        }
    }
}

else
{
    <p> No Post exists.</p>
}

