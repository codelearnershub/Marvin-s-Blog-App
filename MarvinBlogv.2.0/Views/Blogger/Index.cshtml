@model List<MarvinBlogv._2._0.Models.ViewModel.ListPostVM>

@{
    Layout = "BloggerDashboard";
}<h3>Welome @ViewBag.email</h3>


@if (Model.Count() > 0)
{
    @foreach (var post in Model)
    {
        @if (post.Status == true)
        {

            <div class="float-right rounded-bottom">
                <img src="@WC.PostImagePath@post.ImageUrl" class="flex-xl-column" style="width:250px; height:200px" />
            </div>


            <b>@post.PostTitle</b>

            <br />
            @post.Description.Substring(10)<a asp-action="Index" asp-controller="Post"><span>.....Read More</span></a>
            <br />

            @post.CreatedAt.ToLongDateString();
            <br />
            @post.CreatedBy

            <div>
                @foreach (var category in post.PostCategories)
                {
                    <a asp-controller="Category" asp-action="GetPostByCategoryId" asp-route-Id="@category.Id" class="font-weight-bold btn" style="color:white; background-color:dimgrey; border-radius:10%; display:inline">@category.Name</a>
                }

            </div>
            <br />
            
            <a asp-controller="Review" asp-action="GetReviewByPostId" asp-route-Id="@post.Id"><i class="fa fa-thumbs-up" aria-hidden="true"></i></a>@post.Like<i class="fa fa-thumbs-down" aria-hidden="true"></i> @ViewBag.Unlike

            <a asp-controller="Review" asp-action="AddComment">Add Comment</a>
        }
    }
}

else
{
    <p> No Post exists.</p>
}