
@model MarvinBlogv._2._0.Models.ViewModel.CategoryViewModel.CreateCategoryViewModel

@{
    Layout = "_AdminDashboardLayout";

    ViewBag.Title = "Category";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">
                <i class="fas fa-plus"></i> &nbsp;Add Category
            </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label>Category Name:</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Enter Category Name" Required>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div><br><br>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label>Image:</label>
                        <input type="file" name="files" onclick="return validateInput()" asp-for="ImageURL" id="uploadBox" multiple class="form-control" Required>
                        <span class="text-danger"></span><br>
                    </div>
                </div>

                <div class="form-group row justify-content-left">
                    <div class="col">

                        <input type="submit" asp-action="Create" class="btn btn-primary" value="Create">

                    </div>
                </div>


                <div class="col">
                    <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                </div>


                <img src="@WC.ImagePath" style="width:100px; border-radius: 5px; border:1px solid #bbb" />

            </div>
        </div>
    </div>
</form>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function)(){
            $('.summernote').summernote({
                height: 250
            });
        };
        function validateInput() {
            if (document.getElementById("uploadBox").value == "") {
                Swal.fire(
                    'Error!',
                    'Please upload an Image!',
                    'error'
                )
                return false;
            }
            return true;
        }
    </script>

}

