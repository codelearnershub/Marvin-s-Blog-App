@model IEnumerable<MarvinBlogv._2._0.Models.Category>


@{
    Layout = "_AdminDashboardLayout";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="" style="color:black">Categories</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" style="color:black">
                <i class="fas fa-plus"></i> &nbsp; Add Category
            </a>
        </div>
    </div>
    <br /><br />

    <div class="container">
        <div class="row">
            @if (Model.Count() > 0)
            {
                @foreach (var category in Model)
                {
                    <div class="col-4 mb-4 col-lg-4 justify-content-center">
                        <div class="card">
                            <div class="card-header text-center ">
                                <h5><b class="card-title" style="color:black">@category.Name </b></h5>

                                <div class="card-body">
                                    <div class="card"></div>
                                    <a asp-action="GetPostByCategoryId" asp-route-Id="@category.Id"><img width="200" height="150" src="@WC.ImagePath@category.ImageURL" /> </a>
                                    <a asp-route-Id="@category.Id" asp-action="Update" class="btn btn-primary mx-2">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>

                            </div>
                        </div>
                    </div>

                }
            }

            else
            {
                <p> No Category exists.</p>
            }
        </div>
    </div>
</div>


