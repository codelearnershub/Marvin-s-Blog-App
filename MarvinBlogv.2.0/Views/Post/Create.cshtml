@model MarvinBlogv._2._0.Models.ViewModel.CreatePostViewModel

@{
    Layout = "BloggerDashboard";
    ViewBag.Title = "Create Post";
}


<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Summernote with Bootstrap 4</title>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    
    @*<link rel="stylesheet" href="~/summernote-0.8.18-dist/summernote.min.css" />
    
    <link rel="stylesheet" href="~/summernote-0.8.18-dist/summernote-bs4.min.css" />*@
    @*<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>*@

    @*<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-bs4.min.js"></script>*@
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
</head>
<body>
    <!-- <div id="summernote"></div> -->
    <form method="post">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mt-5">
                    <form method="POST">
                        <div class="card">
                            <div class="card-header">
                                <h2 class="card-title">Post Your Blog here</h2>
                            </div>
                            <div class=card-body>
                                <div class=form-group>
                                    <div class=form-row col-md-12>
                                        <label class="form-check-label">Enter the Title of your blog</label>
                                        <input asp-for="Title" id="title" name="title" type="text" class="form-control">
                                        <span asp-validation-for="Title"></span>
                                    </div>
                                    <div class=form-row col-md-12>
                                        <label class="form-check-label">Enter the Description</label>
                                        <input asp-for="Description" id="description" name="description" type="text" class="form-control">
                                        <span asp-validation-for="Description"></span>
                                    </div>
                                    <div class=form-row col-md-12>
                                        <label asp-for="Categories" class="form-check-label">Pick Category/Categories your Post belongs</label>
                                        <select asp-items="@Model.CategorySelectListItem" class="selectpicker" multiple data-live-search="true" asp-for="Categories">
                                        </select>
                                        <span asp-validation-for="Categories"></span>
                                    </div>

                                </div>
                                <div class=form-group>
                                    <div class=form-row col-md-12>
                                        <textarea asp-for="Content" id="summernote" name="content" class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button asp-action="Create" type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </form>
    <script>
        $('#summernote').summernote({
            placeholder: 'Hello Bootstrap 4',
            height: 300,                 // set editor height
            minHeight: null,             // set minimum height of editor
            maxHeight: null,             // set maximum height of editor
            focus: true
        });
        $('select').selectpicker();
    </script>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/summernote-0.8.18-dist/summernote.min.js"></script>
<script src="~/summernote-0.8.18-dist/summernote-bs4.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
